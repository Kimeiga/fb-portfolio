{
	"name": "fb-portfolio",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && node scripts/fix-routes.js",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"bot:trigger": "tsx scripts/trigger-bot.ts",
		"bot:trigger:tech": "tsx scripts/trigger-bot.ts --bot=bot_tech_enthusiast",
		"bot:trigger:writer": "tsx scripts/trigger-bot.ts --bot=bot_creative_writer",
		"bot:trigger:fitness": "tsx scripts/trigger-bot.ts --bot=bot_fitness_coach"
	},
	"devDependencies": {
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.544.0",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/typography": "^0.5.18",
		"@tailwindcss/vite": "^4.1.13",
		"@vite-pwa/sveltekit": "^1.0.1",
		"bits-ui": "^2.11.5",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.13",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vite-plugin-pwa": "^1.1.0",
		"workbox-window": "^7.3.0",
		"wrangler": "^4.43.0"
	},
	"dependencies": {
		"@chatereum/react-e2ee": "^3.0.1",
		"@radix-ui/react-slot": "^1.2.3",
		"better-auth": "^1.3.27",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.31.5",
		"drizzle-orm": "^0.44.6",
		"lucide-react": "^0.545.0",
		"lucide-svelte": "^0.545.0",
		"tailwind-merge": "^3.3.1"
	}
